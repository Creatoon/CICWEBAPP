extends base

block imageForBlocks
        img.header__bgImg.displayBgImage--up600(src="/img/hero-image/hero-location.png", alt="")
        img.header__bgImg.displayBgImage--down600(src="/img/hero-image/hero-location-1x2x.png" alt="")

block overlays
    .header__bgImgBox--overlay &nbsp;
    .header__bgImgBox--text
        .row
            h1 OUR LOCATION

block append head
  link(href='/css/location.css' rel='stylesheet')
 

block content
    main
        section.section-map
            .row
                .companyNameContainer
                    h2.heading-secondary= `${office.placeName}` 
            .row
                #map(data-locations= `${JSON.stringify(office.locations)}`)
                    iframe(src=`${office.mapLink}` class="map-content" frameborder="0" style="border:0;" allowfullscreen aria-hidden="false" tabindex="0")
            .row
                .adressContainer
                    .adressContainer--left
                        .adressContainer--left--adressLine
                            h2 Adress :—
                                h3
                                    p
                                        span Place - 
                                        |    #{office.adressLine}  
