extends base

block append head
  link(href='/css/signup.css' rel='stylesheet')

block imageForBlocks
        img.header__bgImg.displayBgImage--up600(src="/img/hero-image/hero-join.png", alt="")
        img.header__bgImg.displayBgImage--down600(src="/img/hero-image/hero-join-1x2x.png" alt="")

block overlays
    .header__bgImgBox--overlay &nbsp;
    .header__bgImgBox--text
        .row
            h1 SIGN UP HERE

block content
  section.section-signupForm
      .row
        .signup-form
          h2.heading-secondary.signup-heading SIGN UP HERE
          form.form.form--signup
            .form__group
                label.form__label(for="name") Name
                input#name.form__input(type="text" placeholder="your name" required="required")
            .form__group
              label.form__label(for="email") Email address
              input#email.form__input(type="email" placeholder="you@example.com" required="required")
            .form__group.ma-bt-md
              label.form__label(for="password") Password
              input#password.form__input(type="password" placeholder="••••••••" required="required" minlength="8")
            .form__group.ma-bt-md
              label.form__label(for="passwordConfrirm") Password Confirm
              input#passwordConfirm.form__input(type="password" placeholder="••••••••" required="required" minlength="8")
            .form__group
              button.btn.btn--orange Sign up
            .form__group.ma-bt-md
              label.form__label
                | Have an account? 
                a.signUpLinkFromLogin(href='/login') Login
